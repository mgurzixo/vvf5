<div id="{{ctx.id}}"
    {% if (ctx.classes.split(' ')[0] == 'row') { %}
      class = "{{ ctx.classes.replace(/row/g, 'columns')}}"
    {% } else { %}
      class = ""
    {% } %}
    {% if (ctx.styles) { %}
      styles='{{ctx.styles}}'
    {% } %}
     ref='component'
 >
  {% if (ctx.visible) { %}
    {{ctx.children}}
    {% if (!ctx.component.widget || (ctx.component.widget.type != "input")) { %}
    <p ref="messageContainer" class="help is-danger"></p>
  {% } %}
  {% } %}
</div>
