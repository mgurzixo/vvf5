{
    "compilerOptions": {
        "module": "ESNext",
        "target": "es2020",
        "lib": ["ESNext", "DOM"],
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "allowJs": true
        // "checkJs": true
    },
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
        "src/**/*.vue",
        "src/main.js",
        "src/vite-plugin-templates.ts",
        "src/vite-plugin-templates.ts"
    ],
    "exclude": ["node_modules"]
}
